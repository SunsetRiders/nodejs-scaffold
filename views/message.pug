extends layout

block content
  .container
    if messages.success
      div.text-success
        for success in messages.success
          div= success.msg
    if messages.error
      div.text-danger
        for error in messages.error
          div= error.msg

    h3 Call Rest API Form

    form(method='POST')
      label(for='message') Message
      input(type='text', name='message', id='message', autofocus)
      br
      button(type='submit') Send
